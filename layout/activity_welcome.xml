<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8BA"
    tools:context=".Welcome">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to User Page "
        android:textColor="#063BC1"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/text7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:text="Phone"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text5" />

    <TextView
        android:id="@+id/name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#EF0F0F"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/text5"
        app:layout_constraintBottom_toBottomOf="@id/text5"
        app:layout_constraintLeft_toRightOf="@id/text5"
        tools:layout_editor_absoluteX="193dp" />
    <TextView
        android:id="@+id/phone"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#EF0F0F"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/text7"
        app:layout_constraintBottom_toBottomOf="@id/text7"
        app:layout_constraintLeft_toRightOf="@id/text7"
        tools:layout_editor_absoluteX="193dp" />
 <TextView
        android:id="@+id/text8"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="City"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text7"
        app:layout_constraintLeft_toLeftOf="@id/text7"
        tools:layout_editor_absoluteX="193dp" />
    <TextView
        android:id="@+id/city"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="#EF0F0F"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/text8"
        app:layout_constraintBottom_toBottomOf="@id/text8"
        app:layout_constraintLeft_toRightOf="@id/text8"
        tools:layout_editor_absoluteX="193dp" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/city"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@color/purple_700"/>

</androidx.constraintlayout.widget.ConstraintLayout>